<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:backgroundTint="#9E000000"
    android:backgroundTintMode="src_over"
    android:orientation="vertical"
    tools:context=".Easy">

    <FrameLayout
        android:id="@+id/pauseFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/cardEnemy1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCard0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MONKEY"
                android:textAlignment="center"
                android:textColor="#AA9772"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/monkey" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardEnemy2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCard1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MONKEY"
                android:textAlignment="center"
                android:textColor="#AA9772"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/crab" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btPause"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="#99000000"
                app:icon="@drawable/ic_baseline_pause_circle_filled_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"

                    app:iconTint="@color/black" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"

                    app:iconTint="@color/black" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"

                    app:iconTint="@color/black" />

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"

                    app:iconTint="@color/black" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    app:iconTint="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn10"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn11"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn12"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn13"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn14"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn15"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn16"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn17"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn18"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn19"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn20"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn21"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"

                    />

                <Button
                    android:id="@+id/btn22"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"

                    />

                <Button
                    android:id="@+id/btn23"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"

                    />

                <Button
                    android:id="@+id/btn24"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"

                    />

                <Button
                    android:id="@+id/btn25"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"

                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tempCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCard2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MONKEY"
                android:textAlignment="center"
                android:textColor="#AA9772"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="101dp"
                app:srcCompat="@drawable/cobra" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/cardPlayer1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCard3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MONKEY"
                android:textAlignment="center"
                android:textColor="#AA9772"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/monkey" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardPlayer2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCard4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MONKEY"
                android:textAlignment="center"
                android:textColor="#AA9772"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/monkey" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>